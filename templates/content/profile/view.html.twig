{% extends "base.html.twig" %}

{% block title %}Agents > Détail d'un agent{% endblock %}

{% block css %}{% endblock %}

{% block js %}{% endblock %}

{% block body %}
    <div class="app-page-title">
        <div class="page-title-wrapper">
            <div class="page-title-heading">
                <div>
                    Votre profil
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12 col-md-6 col-lg-3">
            <div class="card mb-3">
                <div class="card-body">
                    <a href="{{ path('profile_edit') }}" class="btn btn-block btn-primary">Modifier mon profil</a>
                    <a href="{{ path('profile_password') }}" class="btn btn-block btn-primary">Modifier mon mot de passe</a>
                </div>
            </div>
            <div class="card mb-3">
                <div class="card-header">
                    Photo
                </div>
                <div class="card-body">
                    <img src="{{ asset('img/agents/' ~ profile.photo) }}" alt="" width="100%" height="auto" class="rounded-circle" />
                </div>
            </div>
        </div>
        <div class="col-sm-12 col-md-6 col-lg-9">
            <div class="card mb-3">
                <div class="card-header">
                    Informations
                </div>
                <div class="card-body">
                    <h6 class="font-weight-bold">{{ profile.lastname }} {{ profile.firstname }}</h6>
                    <div class="row">
                        <div class="col-sm-12 col-md-6 mb-0">
                            <p>
                                Numéro de téléphone portable : {{ profile.mobile }}
                                <br />
                                Numéro de téléphone fixe : {% if profile.fixe is not null and profile.fixe is not same as("") %}{{ profile.fixe }}{% else %}Non renseigné{% endif %}
                                <br />
                                Numéro de fax : {% if profile.fax is not null and profile.fax is not same as("") %}{{ profile.fax }}{% else %}Non renseigné{% endif %}
                            </p>
                        </div>
                        <div class="col-sm-12 col-md-6">
                            <p>
                                Adresse e-mail : {{ profile.email }}
                                <br />
                                Identifiant de connexion : {{ profile.username }}
                                <br />
                                {% if profile.isActivated %}
                                <span class="badge badge-success">Actif</span>
                                {% else %}
                                <span class="badge badge-danger">Désactivé</span>
                                {% endif %}
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}