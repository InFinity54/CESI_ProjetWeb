{% extends "base.html.twig" %}

{% block title %}Véhicules > Liste des véhicules{% endblock %}

{% block css %}
    <link rel="stylesheet" type="text/css" href="{{ asset('vendors/css/bootstrap-slider.min.css') }}" />
{% endblock %}

{% block js %}
    {{ encore_entry_script_tags('vehicleEnabledList') }}
    <script src="{{ asset('vendors/js/bootstrap-slider.min.js') }}"></script>
    <script src="{{ asset('js/pages/vehicles_list.js') }}"></script>
{% endblock %}

{% block body %}
    <div class="app-page-title">
        <div class="page-title-wrapper">
            <div class="page-title-heading"><div>Liste des véhicules</div></div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <div class="card mb-3">
                <div class="card-header justify-content-between">
                    Filtrer la liste des véhicules
                    <div class="float-sm-right w-auto text-right">
                        <button type="button" class="btn btn-primary m-0" id="morefilterstoggle">
                            <i class="fas fa-plus"></i>
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    <form method="post" action="{{ path("vehicles_list_search") }}">
                        {% include "content/vehicles/includes/filters.html.twig" %}
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <div class="card mb-3">
                <div class="card-header justify-content-between">
                    Véhicules enregistrés
                    <div class="float-sm-right w-auto text-right">
                        <a href="{{ path("vehicles_list_disabled") }}" class="btn btn-primary m-0">Voir les véhicules désactivés</a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="align-middle mb-0 table table-borderless table-striped table-hover">
                            <thead>
                                <tr>
                                    <th class="text-center">Photo</th>
                                    <th class="text-center">Immatriculation</th>
                                    <th class="text-center">Marque</th>
                                    <th class="text-center">Modèle</th>
                                    <th class="text-center">Date de fabrication</th>
                                    <th class="text-center">Hauteur</th>
                                    <th class="text-center">Largeur</th>
                                    <th class="text-center">Poids</th>
                                    <th class="text-center">Puissance</th>
                                    <th class="text-center">Agence</th>
                                    <th class="text-center">Statut</th>
                                    <th class="text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody id="vehiclesenabledlist">
                                <tr id="vehiclesenabledlistloading" class="text-center">
                                    <td colspan="12" class="text-center">
                                        <img src="{{ asset("img/VGest_Loading.svg") }}" alt="Chargement..." width="150px" height="auto" />
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}