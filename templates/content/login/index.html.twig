{% extends "login.html.twig" %}

{% block title %}Connexion{% endblock %}

{% block css %}{% endblock %}

{% block js %}
    <script src="{{ asset("js/pages/login.js") }}"></script>
{% endblock %}

{% block body %}
    <div class="card mx-auto">
        <div class="card-header">
            Connexion
        </div>
        <div class="card-body">
            <form method="post" id="login-form">
                {% if error %}
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="alert alert-danger">
                                {{ error.messageKey|trans(error.messageData, 'security') }}
                            </div>
                        </div>
                    </div>
                {% endif %}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" />
                <div class="row">
                    <div class="col-sm-12">
                        <div class="position-relative form-group">
                            <label for="username">Votre identifiant</label>
                            <input name="username" value="{{ last_username }}" id="username" placeholder="Identifiant" type="text" class="form-control" required />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <div class="position-relative form-group">
                            <label for="password">Votre mot de passe</label>
                            <input name="password" id="password" placeholder="Mot de passe" type="password" class="form-control" required />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <button type="submit" class="btn btn-primary btn-block">Me connecter</button>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12 text-center mt-2">
                        <a href="{{ path("password") }}">Mot de passe oubli√© ?</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock %}