{% extends "base.html.twig" %}

{% block title %}Statuts > Liste des statuts{% endblock %}

{% block css %}{% endblock %}

{% block js %}{% endblock %}

{% block body %}
    <div class="app-page-title">
        <div class="page-title-wrapper">
            <div class="page-title-heading"><div>Liste des statuts</div></div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <div class="card mb-3">
                <div class="card-header justify-content-between">
                    Statuts enregistr√©s
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="align-middle mb-0 table table-borderless table-striped table-hover">
                            <thead>
                                <tr>
                                    <th class="text-center">Statut</th>
                                    <th class="text-center">Nombre en circulation</th>
                                    <th class="text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for status in allstatus %}
                                    <tr>
                                        <td class="text-center">{{ status.name }}</td>
                                        <td class="text-center">0</td>
                                        <td class="text-center"><a href="{{ path("status_remove", {id:status.id}) }}" class="btn btn-danger btn-sm rounded-circle"><i class="fas fa-trash"></i></a></td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}