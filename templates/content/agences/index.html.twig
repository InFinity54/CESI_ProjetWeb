{% extends "base.html.twig" %}

{% block title %}Agences > Liste des agences{% endblock %}

{% block css %}{% endblock %}

{% block js %}
    {{ encore_entry_script_tags('agencesList') }}
{% endblock %}

{% block body %}
    <div class="app-page-title">
        <div class="page-title-wrapper">
            <div class="page-title-heading"><div>Liste des agences</div></div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="main-card mb-3 card">
                <div class="card-header">
                    Agences enregistrées
                </div>
                <div class="table-responsive">
                    <table class="align-middle mb-0 table table-borderless table-striped table-hover">
                        <thead>
                            <tr>
                                <th class="text-center">Photo d’illustration</th>
                                <th class="text-center">Nom</th>
                                <th class="text-center">Adresse</th>
                                <th class="text-center">Téléphone</th>
                                <th class="text-center">Fax</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody id="agenceslist">
                            <tr id="agenceslistloading" class="text-center">
                                <td colspan="12" class="text-center">
                                    <img src="{{ asset("img/VGest_Loading.svg") }}" alt="Chargement..." width="150px" height="auto" />
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}