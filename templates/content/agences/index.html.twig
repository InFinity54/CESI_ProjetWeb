{% extends "base.html.twig" %}

{% block title %}Agences > Liste des agences{% endblock %}

{% block css %}{% endblock %}

{% block js %}{% endblock %}

{% block body %}
    <div class="app-page-title">
        <div class="page-title-wrapper">
            <div class="page-title-heading"><div>Liste des agences</div></div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="main-card mb-3 card">
                <div class="card-header">
                    Agences enregistrées
                </div>
                <div class="table-responsive">
                    <table class="align-middle mb-0 table table-borderless table-striped table-hover">
                        <thead>
                            <tr>
                                <th class="text-center">Photo d’illustration</th>
                                <th class="text-center">Nom</th>
                                <th class="text-center">Adresse</th>
                                <th class="text-center">Téléphone</th>
                                <th class="text-center">Fax</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {%for agence in agences %}
                            <tr>
                                <td class="text-center"><img width="150" class="rounded-circle" src="{{ asset("img/agences/exemple.jpg") }}" alt="" /></td>
                                <td class="text-center">{{ agence.getNomAg() }}</td>
                                <td class="text-center">{{ agence.getAdresseAg() }} </br>
                                {{ agence.getComplementAg() }} </br>
                                {{ agence.getCodepostalAg() }} {{ agence.getVilleAg() }}</td>
                                <td class="text-center">0{{ agence.getNumero() }}</td>
                                <td class="text-center">0{{ agence.getFaxAg() }}</td>
                                <td class="text-center">
                                    <a href="{{ path("agences_view", { id: agence.id}) }}" class="btn btn-primary btn-sm rounded-circle" title="Voir le détail de cette agence">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="{{ path("agences_edit", { id: agence.id}) }}" class="btn btn-primary btn-sm rounded-circle" title="Éditer cette agence">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}