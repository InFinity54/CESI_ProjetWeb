{% extends "base.html.twig" %}

{% block title %}Ajouter une nouvelle agence{% endblock %}

{% block css %}{% endblock %}

{% block js %}{% endblock %}

{% block body %}
    <div class="app-page-title">
        <div class="page-title-wrapper">
            <div class="page-title-heading"><div>Ajout d'une agence</div></div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="main-card mb-3 card">
                <div class="card-header">
                    Formulaire
                </div>
                <div class="card-body">
                    <form method="post" action="#">
                        Image : <Input id=image type="file" name="image" accept="image/png, image/jpeg" required><br>
			            Nom : <Input id=nom type="text" name="nom" required><br>
			            Adresse : <Input  id=adresse type="adresse" name="adresse" required><br>
			            Téléphone : <Input id=telephone type = "telephone" name = "telephone" minlength =10 maxlength=10 required><br>
			            Fax : <input id=fax type="telephone" name ="fax" minlength =10 maxlength=10 required><br>
                        <br>
                        <a class="btn btn-primary">Mon bouton</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}