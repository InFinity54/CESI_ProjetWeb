{% extends "base.html.twig" %}

{% block title %}Agences > Détail agence{% endblock %}

{% block css %}{% endblock %}

{% block js %}{% endblock %}

{% block body %}
    <div class="app-page-title">
        <div class="page-title-wrapper">
            <div class="page-title-heading">
                <div>
                    Détail de l'agence
                    <div class="page-title-subheading">
                        Nancy
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12 col-md-6 col-lg-3">
            <div class="card mb-3">
                <div class="card-header">
                    Photo
                </div>
                <div class="card-body">
                    <img src="{{ asset('img/agences/exemple.jpg') }}" alt="" width="100%" height="auto" />
                </div>
            </div>
        </div>
        <div class="col-sm-12 col-md-6 col-lg-9">
            <div class="card mb-3">
                <div class="card-header">
                    Informations
                </div>
                <div class="card-body">
                    <h6 class="font-weight-bold">{{ agence.getNomAg() }}</h6>
                    <div class="row">
                        <div class="col-sm-12 col-md-6 mb-0">
                            <p>
                                {{ agence.getAdresseAg() }}
                                <br/>
                                {{ agence.getComplementAg() }}
                                <br />
                                {{ agence.getCodepostalAg() }} {{ agence.getVilleAg() }}
                            </p>
                        </div>
                        <div class="col-sm-12 col-md-6">
                            <p>
                                Numéro de téléphone : 0{{ agence.getNumero() }}
                                <br />
                                Numéro de fax : 0{{ agence.getFaxAg() }}
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}