{% extends "base.html.twig" %}

{% block title %}Agents > Détail d'un agent{% endblock %}

{% block css %}
    <link rel="stylesheet" type="text/css" href="{{ asset("vendors/css/fotorama.css") }}" />
{% endblock %}

{% block js %}
    <script src="{{ asset("vendors/js/fotorama.js") }}"></script>
{% endblock %}

{% block body %}
    <div class="app-page-title">
        <div class="page-title-wrapper">
            <div class="page-title-heading">
                <div>
                    Détail d'un agent
                    <div class="page-title-subheading">
                        {{ agent.lastname }} {{ agent.firstname }}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12 col-md-6 col-lg-3">
            <div class="card mb-3">
                <div class="card-header">
                    Photo
                </div>
                <div class="card-body">
                    <div class="fotorama w-100" data-width="100%" data-height="200" data-allowfullscreen="true" data-nav="thumbs">
                        <img src="{{ asset('img/agents/' ~ agent.photo) }}" alt="" width="100%" height="auto" />
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-12 col-md-6 col-lg-9">
            <div class="card mb-3">
                <div class="card-header">
                    Informations
                </div>
                <div class="card-body">
                    <h6 class="font-weight-bold">{{ agent.lastname }} {{ agent.firstname }}</h6>
                    <div class="row">
                        <div class="col-sm-12 col-md-6 mb-0">
                            <p>
                                Numéro de téléphone fixe : {{ agent.fixe }}
                                <br />
                                Numéro de téléphone portable : {{ agent.mobile }}
                                <br />
                                Numéro de fax : {{ agent.fax }}
                            </p>
                        </div>
                        <div class="col-sm-12 col-md-6">
                            <p>
                                Adresse e-mail : {{ agent.email }}
                                <br />
                                Identifiant de connexion : {{ agent.username }}
                                <br />
                                {% if agent.isActivated %}
                                <span class="badge badge-success">Actif</span>
                                {% else %}
                                <span class="badge badge-danger">Désactivé</span>
                                {% endif %}
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}