{% extends "base.html.twig" %}

{% block title %}Agents > Liste des agents désactivés{% endblock %}

{% block css %}{% endblock %}

{% block js %}{% endblock %}

{% block body %}
    <div class="app-page-title">
        <div class="page-title-wrapper">
            <div class="page-title-heading"><div>Liste des agents désactivés</div></div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="main-card mb-3 card">
                <div class="card-header justify-content-between">
                    Agents désactivés
                    <div class="float-sm-right w-auto text-right">
                        <a href="{{ path("agents_list") }}" class="btn btn-primary m-0">Revenir aux agents actifs</a>
                    </div>
                </div>
                <div class="table-responsive">
                    {% if allAgents|length > 0 %}
                        <table class="align-middle mb-0 table table-borderless table-striped table-hover">
                            <thead>
                                <tr>
                                    <th class="text-center">Photo</th>
                                    <th class="text-center">Identité</th>
                                    <th class="text-center">Nom d'utilisateur</th>
                                    <th class="text-center">Statut</th>
                                    <th class="text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for agent in allAgents  %}
                                    <tr>
                                        <td class="text-center"><img src="{{ asset("img/agents/" ~ agent.photo) }}" alt="" class="rounded-circle" width="50px" height="auto" /></td>
                                        <td class="text-center">{{ agent.lastname }} {{ agent.firstname }}</td>
                                        <td class="text-center">{{ agent.username }}</td>
                                        <td class="text-center"><span class="badge badge-danger">Désactivé</span></td>
                                        <td class="text-center"><a href="{{ path("agents_view", {id:agent.id}) }}" class="btn btn-primary btn-sm rounded-circle"><i class="fas fa-eye"></i></a>
                                            <a href="{{ path("agents_edit", {id:agent.id}) }}" class="btn btn-primary btn-sm rounded-circle"><i class="fas fa-edit"></i></a>
                                            <a href="{{ path("agents_enable", {id:agent.id}) }}" class="btn btn-success btn-sm rounded-circle"><i class="fas fa-check"></i></a>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    {% else %}
                        <p class="text-center">Aucun agent n'est actuellement désactivé.</p>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}